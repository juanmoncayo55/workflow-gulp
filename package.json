{
  "name": "workflow-gulp",
  "version": "1.0.0",
  "description": "Este workflow me servirÃ¡ para desarrollar proyectos Frontend de forma mas agil con la ayuda de Gulp y muchas extensiones de gulp.",
  "main": "gulpfile.js",
  "scripts": {
	"test": "echo \"Error: no test specified\" && exit 1",
	"pug": "gulp pug",
	"sass": "gulp sass",
	"es6": "gulp es6",
	"serve": "browser-sync start --server --startPath \"dist\" --files \"dist/**/*.+(html|css|js)\"",
	"build:dev": "npm run pug && npm run sass && npm run es6",
	"watch:pug": "onchange \"./src/pug/**\" -- npm run pug",
	"watch:sass": "onchange \"./src/scss/**\" -- npm run sass",
	"watch:es6": "onchange \"./src/es6/**\" -- npm run es6",
	"watch:dev": "parallelshell \"npm run serve\" \"npm run watch:pug\" \"npm run watch:sass\" \"npm run watch:es6\"",
	"img": "gulp img",
	"svg": "gulp svg",
	"webp": "gulp webp",
	"resize": "mogrify -resize \"1024>\" ./dist/img/*.*",
	"fonts": "gulp fonts",
	"statics": "gulp statics",
	"build:media": "npm run img && npm run svg && npm run webp && npm run resize && npm run fonts && npm run statics",
	"css": "gulp css",
	"js": "gulp js",
	"html": "gulp html",
	"build:prod": "npm run css && npm run js && npm run html",
	"watch:css": "onchange \"./dist/css/**\" -- npm run css",
	"watch:js": "onchange \"./dist/js/**\" -- npm run js",
	"watch:html": "onchange \"./dist/*.html\" -- npm run html",
	"watch:prod": "parallelshell \"npm run serve\" \"npm run watch:css\" \"npm run watch:js\" \"npm run watch:html\"",
	"start": "npm run build:prod && npm run watch:prod",	
    "postinstall": "npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juanmoncayo55/workflow-gulp.git"
  },
  "keywords": [
    "html",
    "css",
    "pug",
    "sass",
    "png",
    "jpg",
    "svg",
    "javascript",
    "es6",
    "gulp"
  ],
  "author": "Juan Moriones",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.23.6",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.29.3",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-pug": "^5.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-svgmin": "^4.1.0",
    "gulp-uglify": "^3.0.2",
    "gulp-uncss": "^1.0.6",
    "gulp-useref": "^5.0.0",
    "gulp-webp": "^4.0.0",
    "imagemin-pngquant": "^9.0.2",
    "onchange": "^7.1.0",
    "parallelshell": "^3.0.1",
    "sass": "^1.69.5"
  },
  "dependencies": {
    "font-awesome": "^4.7.0",
    "normalize.css": "^8.0.1"
  }
}
